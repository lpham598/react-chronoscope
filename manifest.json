{
    "manifest_version": 2,
    "name": "React ChronoScope",
    "version": "1.0.0",
    "devtools_page": "devtools.html",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "run_at": "document_end",
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "contentscript.js"
        ],
        "css": ["contentscript.css"]
      }
    ],
    "background": {
      "scripts": [
        "backgroundscript.js"
      ],
      "persistant": true
    },
    "web_accessible_resources": [
      "inject.js"
    ],
    "externally_connectable": {
      "ids": [
        "*"
      ]
    }
}